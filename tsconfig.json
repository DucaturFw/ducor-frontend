{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "target": "es5",
    "baseUrl": "./src/",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "exclude": [
    "dist",
    "node_modules",
    "*.test.ts"
  ]
}
